{% extends 'base.html.twig' %}

{% block title %}Recipes - Ingredients{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ingredients</h1>

        <a href="{{ path('ingredient.create') }}" class="btn btn-primary">New ingredient</a>

        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger mt-4">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-dismissible alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        
        <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Number</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for ingredient in ingredients %}
                <tr class="table-light">
                    <th scope="row">{{ ingredient.id }}</th>
                    <td>{{ ingredient.name }}</td>
                    <td>{{ ingredient.price }}</td>
                    <td colspan="2"><a href="{{ path('ingredient.edit', {id: ingredient.id}) }}" class="badge rounded-pill bg-info">Edit</a></td>
                    <td><a href="{{ path('ingredient.delete', {id: ingredient.id}) }}" class="badge rounded-pill bg-danger">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
    </div>
{% endblock %}
