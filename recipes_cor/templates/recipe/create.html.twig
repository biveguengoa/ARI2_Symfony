{% extends 'base.html.twig' %}

{% block title %}Create recipe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">New recipe</h1>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.duration) }}
                {{ form_widget(form.duration) }}
                <div class="form-error">
                    {{ form_errors(form.duration) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.nb_person) }}
                {{ form_widget(form.nb_person) }}
                <div class="form-error">
                    {{ form_errors(form.nb_person) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.difficulty) }}
                {{ form_widget(form.difficulty) }}
                <div class="form-error">
                    {{ form_errors(form.difficulty) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_row(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}