{% extends "base.html.twig" %}

{% block title %}Recipes{% endblock %}

{% block body %}
    
    <div class="container mt-4">
        {% if recipes %}
            <h1>Recipes</h1>

            <a href="{{ path('recipe.create') }}" class="btn btn-primary">New recipe</a>

            {% for message in app.flashes('error') %}
                <div class="alert alert-dismissible alert-danger mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-dismissible alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Number</th>
                        <th scope="col">Title</th>
                        <th scope="col">Duration (min)</th>
                        <th scope="col">Difficulty</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                        <tr class="table-light">
                            <th scope="row">{{ recipe.id }}</th>
                            <td>{{ recipe.name }}</td>
                            <td>
                                {% if recipe.duration is null %}
                                    Non renseigné
                                {% else %}
                                    {{ recipe.duration }}
                                {% endif %}
                            </td>
                            <td>
                                {% if recipe.difficulty is null %}
                                    Non renseigné
                                {% else %}
                                    {{ recipe.difficulty }}
                                {% endif %}
                            </td>
                            <td colspan="2"><a href="{{ path('recipe.edit', {id: recipe.id}) }}" class="badge rounded-pill bg-info">Edit</a></td>
                            <td><a href="{{ path('recipe.delete', {id: recipe.id}) }}" class="badge rounded-pill bg-danger">Delete</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h4>Il n'y a pas encore de recettes</h4>

            <a href="{{ path('recipe.create') }}" class="btn btn-primary">Create recipe</a>

        {% endif %}
    </div>
{% endblock %}

